h1, h2, h3, h4 {
    margin-top: 4px;
    margin-bottom: 6px;
}

select {
  margin: 0;
  padding: 0;
  box-shadow: none;
  border: none;
}

li
{
  list-style-type: square;
}


ul
{
    margin-left: 20px;
}

li
{
    padding-left: 0px;
}


webview
{
  width: 100%;
  height: calc(100% - 4px);
  position: absolute;
}



hr {
    margin-top: 10px;
    margin-bottom: 10px;
    height: 1px;
    color: gray;
    background: gray;
    font-size: 0;
    border: 0;
}

p {
    margin-bottom: 5px;
}

button
{
  font-size: 1.0em;
  padding: 6px;
}

a {
  color: DimGray ;
}

a { text-decoration:none; }



a:hover
{
  text-decoration: underline;
  color: black;
}

a:visited
{
  color: Gray;
}

a:visited:hover
{
  color: black;
}
