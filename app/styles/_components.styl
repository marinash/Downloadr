.dropdown > ul {

    list-style-type: none;
    margin: 0px;
    position: fixed;
    font-size: 0.8em;
    margin-left: 0px;
    margin-top: 40px;
    opacity: 0;
    transition: opacity 0.5s linear;
    padding: 10px 20px 10px 5px;
    background-color: rgba(255, 255, 255, 0.50);
    text-shadow: none;
    z-index: 5000;
}

.dropdown:hover > ul {

  opacity: 1;

}

.dropdown > ul {

    visibility: hidden;
    opacity: 0;
    transition: visibility 0s linear 0.5s,opacity 0.5s linear;
}

.dropdown:hover > ul {

    visibility:visible;
    opacity:1;
    transition-delay:0s;

}

