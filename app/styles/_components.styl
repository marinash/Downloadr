/* MENU: Styles for the top header menu. */
.menu {
  float: right;
  display: inline-block;
}

  .menu li {
    list-style-type: none;
    display: inline;
    float: left;
  }

  .menu li > a, .menu li > span {
  width: 120px;
  height: 50px;
  color: #9f9f9f;
  display: inline-block;
  text-decoration: none;
  text-align: center;
  line-height: 50px;

  transition-duration: 0.3s;
    transition-property: background-color;

  }

  .menu.smaller li > a, .menu.smaller li > span {
    height: 40px;
    line-height: 40px;
  }

    .menu li > a:hover {
      background-color: gray;
      color: silver;
    }

    .menu li > a:focus {
      background-color: gray;
      color: silver;
      box-shadow: 2px 2px 2px rgba(0, 0, 0, 0.6);
    }

    .menu li > a:active {
        background: #171717;
        color: white !important;
    }

    .menu li > a:visited {
        background: #171717;
        color: white !important;
    }

    .menu li > a.selected {
        background: white;
    }

    .menu li > a.active {
      background: red;
      color: blue;
    }



